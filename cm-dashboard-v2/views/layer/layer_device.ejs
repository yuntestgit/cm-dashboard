<table class="table" style="margin-top:20px;border-top:0px;height: 20%;">
    <thead>
        <tr>
            <th style="font-size: 20px"><span id="device_name"></span>　>   <%= devices_username[0].Username%></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <div class="row">
                    <div id="left" class="col-md-6">
                        <div style="text-align: center">                
                            <a style="font-size: 20px">頭部角度</a>
                        </div>
                        <canvas id="chart_left"></canvas>
                        <script>
                            var ctx_left = document.getElementById('chart_left');
